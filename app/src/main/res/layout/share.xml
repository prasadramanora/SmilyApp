<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#0E3386">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Expo Logo"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:id="@+id/rl_visitorimg"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/view1"
            android:background="#fff">

            <ImageView
                android:id="@+id/iv_image"

                android:layout_width="match_parent"

                android:layout_height="350dp"
                android:layout_centerHorizontal="true"

                android:scaleType="fitXY">

            </ImageView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/rl_visitorimg"
            android:background="#0E3386">

        </View>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_visitorimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Name Of Visitor"
            android:textColor="#fff"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Designation"
            android:textColor="#fff"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_orginization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_designation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="orgnization"
            android:textColor="#fff"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orginization"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Thanku For Visting Us."
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_bg"
        android:text="Share Expo Logo"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp">

    </Button>
</RelativeLayout>