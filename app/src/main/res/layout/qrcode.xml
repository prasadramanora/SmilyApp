<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_visitordata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_qrcodedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edt_name"
            android:layout_marginTop="4dp"
            android:background="@drawable/dialog_bg"
            android:hint="Enter Name">


        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:id="@+id/edt_designation"
            android:background="@drawable/dialog_bg"
            android:hint="Enter Designation">


        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:id="@+id/edt_companyname"
            android:background="@drawable/dialog_bg"
            android:hint="Enter Company Name">


        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edt_mobileno"
            android:layout_marginTop="4dp"
            android:background="@drawable/dialog_bg"
            android:hint="Enter Mobile Number"
            android:inputType="number">


        </EditText>

        <Button
            android:layout_width="200dp"
            android:text="Submit"
            android:id="@+id/btn_submit"
            android:background="@drawable/dialog_bg"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="50dp">

        </Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_menubuttun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qrcode">

        </ImageView>

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_scan"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_bg"
            android:text="QRCODE SCAN"
            android:textColor="#000"
            android:textSize="20dp"

            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_scan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_bg"
            android:text="Exhibitor List "
            android:textColor="#000"
            android:textSize="20dp"

            android:textStyle="bold">

        </Button>


        <Button
            android:id="@+id/btn_newuser"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_share"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_bg"
            android:text="Capture New"
            android:textColor="#000"
            android:textSize="20dp"

            android:textStyle="bold">

        </Button>

    </RelativeLayout>


</RelativeLayout>